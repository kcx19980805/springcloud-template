<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kcx.api.admin.sys.dao.SysUserDao">

    <!--  账号管理列表-->
    <select id="userList" resultType="com.kcx.api.admin.sys.responseVo.ResUserListVO">
        select
        su.oid,
        su.account,
        su.status
        from `sys_user` as su
        where su.is_del = 0
        <if test="keyword != null and keyword != ''">
            and ( su.`account` like concat ('%',#{keyword},'%'))
        </if>
        <if test="limit != -1">
            limit #{sqlPage},#{limit}
        </if>
    </select>

    <!--    账号管理-列表-查询-总数-->
    <select id="userListTotal" resultType="java.lang.Integer">
        select
        count(1)
        from `sys_user` as su
        <if test="keyword != null and keyword != ''">
            where account like concat ('%',#{keyword},'%')
        </if>
    </select>

</mapper>
